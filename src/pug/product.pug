					include includes/left-menu
			.col-12.col-lg-9.card
				.row.align-items-center.justify-content-between.mb-1
					.col-auto
						h1.h.text-m1 Батареи салютов
					.col-auto
						ul.breadcrumbs
							li.breadcrumbs-item: a(href="/").breadcrumbs-link Главная
							li.breadcrumbs-item Каталог
				.row.mb-5
					.col-12.col-sm-4.mb-2.mb-sm-0
						.card-preview
							.card-preview-main
								.product-action-discount
									span.product-action-discount__val -22%
								img(src="img/card-preview.png", alt="")
							ul.card-preview-thumbs.owl-carousel
								li: a(href="#").card-preview-thumbs__item: img(src="img/card-preview.png", alt="")
								li: a(href="#").card-preview-thumbs__item: img(src="img/card-preview.png", alt="")
