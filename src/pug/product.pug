							li.card-params__item 
								span Мощность
								span 2
							li.card-params__item 
								span Калибр
								span 1.25 дюйм
							li.card-params__item 
								span Заряды
								span 37
							li.card-params__item 
								span Время работы
								span 80 сек.
							li.card-params__item 
								span Высота подъема
								span 1 шт.
							li.card-params__item 
								span Безопасный радиус
								span -
							li.card-params__item 
								span Вес
								span 1.25 дюйм
							li.card-params__item 
								span Габариты
								span 37
							li.card-params__item 
								span Запуск в помещении
								span 80 сек.
						.card-buy.mb-2
							.card-buy__price
								.product-item-info
									.product-item-info__oldprice 5 228 РУБ
									.product-item-info__price 5 228 РУБ
							.card-buy__count
								.set-number
									button.set-number__btn.dec -
									input(type="text" value="1" readonly).set-number__input
									button.set-number__btn.inc +
							.card-buy__btn
								a(href="#").buy-btn 
									i.fa 
									span Купить
